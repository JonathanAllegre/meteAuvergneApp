{% extends 'SiteBundle/Views//Templates/Layout.twig' %}
{% block head %}
<title>MeteoVergne | Arome 0.025</title>
{% endblock %}
{% block content %}
<div class="jumbotron headerModel">
   <h1 class="display-3">Recherche pour {{ searchFor }} </h1>
   <p class="lead"></p>
</div>
<div class="container">
	<div class="col-xs-12">
		<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Ville</th>
      <th scope="col">Code Postale</th>
      <th scope="col">Arpege 0.1</th>
      <th scope="col">Arome 0.025</th>
      <th scope="col">Arome 0.01</th>
      <th scope="col">GFS</th>
    </tr>
  </thead>
  <tbody>
  	{% for result in results %}
       <tr>
	      <th scope="row">{{ loop.index }}</th>
	      <th scope="row">{{ result.realName }}</th>
	      <td>{{ result.zipCode }}</td>
	    
		   
	      {% if result.activeArpege %}
    			<td><a href=""><i class="fa fa-check" aria-hidden="true"></i></a></td>
    	  {% else %}
    			<td><i class="fa fa-times" aria-hidden="true"></i></td>
		  {% endif %}

	      {% if result.activeArome0025 %}
    			<td><a href="{{ LinkBuilder.getLink('detailForecast', {model:"arome0025", idVille:result.idCity, slugVille: result.slug}) }}"><i class="fa fa-check" aria-hidden="true"></i></a></td>
    	  {% else %}
    			<td><i class="fa fa-times" aria-hidden="true"></i></td>
		  {% endif %}

		  {% if result.activeArome001 %}
    			<td><a href=""><i class="fa fa-check" aria-hidden="true"></i></a></td>
    	  {% else %}
    			<td><i class="fa fa-times" aria-hidden="true"></i></td>
		  {% endif %}

		  {% if result.activeGfs %}
    			<td><a href=""><i class="fa fa-check" aria-hidden="true"></i></a></td>
    	  {% else %}
    			<td><i class="fa fa-times" aria-hidden="true"></i></td>
		  {% endif %}

    	</tr>
    {% endfor %}
  </tbody>
</table>
	</div>
</div>
{% endblock %}